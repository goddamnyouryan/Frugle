<% title "Sign In" %>
	<div id="splash_main_signup">
		<h2 class="scrollable_frugles_header" style="margin: 20px 0; text-align:center;">Enter Your Info to Login</h2>
      <div class="form_row">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<div class="reg_row">
					<div class="reg_col_left">Email</div>
				  <div class="reg_col_right"><%= f.email_field :email, :class => "reg_bar" %></div>
				  	<div class="clr"></div>
				</div>
				<div class="reg_row">
					<div class="reg_col_left">Password</div>
				  <div class="reg_col_right"><%= f.password_field :password, :class => "reg_bar" %></div>
				  	<div class="clr"></div>
				</div>

		  <% if devise_mapping.rememberable? -%>
			<div class="reg_row">
				<div class="reg_col_left">Remember Me</div>
			  <div class="reg_col_right"><%= f.check_box :remember_me %></div>
			  	<div class="clr"></div>
			</div>
		  <% end -%>
			<div class="hide_button"><%= f.submit "Sign In", :class => "orange_button" %></div>
		<% end %>
		<div class="form_row" style="text-align:center; font-size:14px;">
			<%= render :partial => "users/shared/links" %>
			Sign In With 
			<%- resource_class.omniauth_providers.each do |provider| %>
				<%= link_to image_tag("facebook.png"), omniauth_authorize_path(resource_name, provider), :style => "position:relative;top:10px;" %>
			<% end -%>
		</div>

<div style="margin: 0 0 -14px -10px;"><%= image_tag "bottomgrass.png" %></div>
</div>

</div>

<div class="clr"></div>


