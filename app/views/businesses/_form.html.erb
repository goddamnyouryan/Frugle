<%= form_for @business do |f| %>
  <%= f.error_messages %>
	<div class="reg_row">
		<div class="reg_col_left">Business Name</div>
	  <div class="reg_col_right"><%= f.text_field :name, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="reg_col_left">Address</div>
	  <div class="reg_col_right"><%= f.text_field :address, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="reg_col_left">Address 2</div>
	  <div class="reg_col_right"><%= f.text_field :address2, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="reg_col_left">Zip Code</div>
	  <div class="reg_col_right"><%= f.text_field :zip, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="reg_col_left">Website URL</div>
	  <div class="reg_col_right"><%= f.text_field :website, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="reg_col_left">Business Info</div>
	  <div class="reg_col_right"><%= f.text_area :info, :class => "reg_bar", :style => "height: 80px;width:205px;" %></div>
	  	<div class="clr"></div>
	</div>
<script type="text/javascript">
$('business_category_id').observe("change",function(){
	categorySelected();
});
</script>
<div class="reg_row">
	<div class="reg_col_left">Category</div>
  <div class="reg_col_right"><%= f.collection_select :category_id, Category.find(:all), :id, :title, :prompt => "Select a Category" %></div>
  	<div class="clr"></div>
</div>

<div class="reg_row">
	<div class="reg_col_left">Subcategory</div>
  <div class="reg_col_right" id="subcategory_field"><%= f.collection_select :subcategory_id, Subcategory.find(:all), :id, :title, :prompt => "Select a Subcategory" %></div>
  	<div class="clr"></div>
</div>

<div class="reg_row">
	<div class="reg_col_left">How Did You Hear About Frugle?</div>
  <div class="reg_col_right"><%= f.select :hear_about, options_for_select(@frugle_hear_about_options) %></div>
  	<div class="clr"></div>
</div>

<% unless user_signed_in? %>
  <h2 class="caption">Use the following email and password to login next time</h2>

	<div class="reg_row">
		<div class="reg_col_left">Email Address</div>
	  <div class="reg_col_right"><%= f.email_field :email, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	
	<div class="reg_row">
		<div class="reg_col_left">Password</div>
	  <div class="reg_col_right"><%= f.password_field :password, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	
	<div class="reg_row">
		<div class="reg_col_left">Confirm Password</div>
	  <div class="reg_col_right"><%= f.password_field :password_confirmation, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	
	<div class="reg_row">
		<div class="reg_col_left">Contact Name</div>
	  <div class="reg_col_right"><%= f.text_field :contact_name, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	
	<div class="reg_row">
		<div class="reg_col_left" style="margin-top:20px;">Contact Phone Number</div>
	  <div class="reg_col_right">
			<script>
			function moveOnMax(field,nextFieldID){
			  if(field.value.length >= field.maxLength){
			    document.getElementById(nextFieldID).focus();
			  }
			}
			</script>
	  	<%= f.fields_for :contact_number do |phone| %><br />
		  	<%= phone.text_field :contact_area_code, :size => 3, :class => "reg_bar_phone", :maxlength => 3, :onkeyup => "moveOnMax(this,'business_contact_number_contact_first_three_digits')" %>
				<%= phone.text_field :contact_first_three_digits, :size => 3, :class => "reg_bar_phone", :maxlength => 3, :onkeyup => "moveOnMax(this,'business_contact_number_contact_second_four_digits')" %>
				<%= phone.text_field :contact_second_four_digits, :size => 4, :class => "reg_bar_phone", :maxlength => 4, :onkeyup => "moveOnMax(this,'business_role')" %>
		  <% end %>
	  </div>
	  	<div class="clr"></div>
	</div>
	
	<div class="reg_row">
		<div class="reg_col_left">Your Role</div>
	  <div class="reg_col_right"><%= f.select :role, options_for_select(@business_role_options) %></div>
	  	<div class="clr"></div>
	</div>

<% end %>
  <p><%= f.submit "Sign Up!", :class => "button", :style => "margin-left:190px;" %></p>
<% end %>
