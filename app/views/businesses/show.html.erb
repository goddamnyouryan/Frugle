<% title "#{@business.name}" %>

<p>
  <%= @business.address %><br />
  <%= @business.zip %><br />
  <%= @business.phone %><br />
  <%= @business.website %>
</p>
<p>
  <strong>Info:</strong>
  <%= @business.info %>
</p>
<p>
  <strong>Category:</strong>
  <%= @business.category.title %>
</p>
<p>
  <strong>Subcategory:</strong>
  <%= @business.subcategory.title %>
</p>

<% if user_signed_in? %>
<% unless current_user.role == "business" %>
<p id="follow">
	<% if @follow == nil %>
		<%= link_to "Follow #{@business.name}", new_follow_path(current_user.id, :business_id => @business.id), :remote => true %>
	<% else %>
		<%= link_to "Unfollow #{@business.name}", follow_path(current_user.id, :business_id => @business.id), :method => :delete, :remote => true %>
	<% end %>
</p>
<% end %>
<% end %>

<p><%= link_to "Back to #{@business.neighborhood.name}", :controller => "neighborhoods", :action => "show", :id => @business.neighborhood.friendly_id %></p>

<h2>Frugles(<%= @frugles.count %>)</h2>
<ul class="frugles">
	<%= render :partial => 'neighborhoods/frugle', :collection => @frugles, :as => :frugle %>
</ul>

<%= raw(@map.div(:width => 600, :height => 400)) %>
