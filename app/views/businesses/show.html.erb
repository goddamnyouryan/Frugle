<% title "#{@business.name}" %>

<div class="yellow_strip"><%= @business.name %></div>
<div id="business_info">

<div class="fl">
	<h2><%= @business.name %></h2>
	
	<div style="margin: 15px 0;">
		<span style="float:left;"><%= category_icon_business(@business) %></span>
		<h3 style="float: left; font-size: 12px; margin-left: 5px;">Category: <br /><%= @business.category.title %></h3>
	</div>
	<div class="clr"></div>
	
	<p style="margin-top:15px;">
		<%= @business.address %><br />
    <% unless @business.address2.nil? %>
    	<%= @business.address2 %><br />
		<% end %>
		<%= @business.neighborhood.name %>, <%= @business.zip %><br />
		<%= @business.phone %><br />
  Web: <%= @business.website %> 
	</p>
</div>

<div class="fr">
	<% if user_signed_in? %>
	<% unless current_user.role == "business" %>
	<p id="follow">
		<%= render :partial => 'frugles/follow', :business => @business %>
	</p>
	<div class="clr"></div>
	<% end %>
	<% end %>
<div class="hide_button"><%= link_to "Back to #{@business.neighborhood.name}", :controller => "neighborhoods", :action => "show", :id => @business.neighborhood.friendly_id %></div>
<div class="clr"></div>

</div>
					
<div class="clr"></div>
<div class="fl">
<h2>Company Description</h2>
<p> <%= @business.info %></p>
</div>

</div>

<div class="form_box_col2_plain">
<div align="center">
  <p><%= raw(@map.div(:width => 345, :height => 245)) %>	</p>
</div>
</div>
<div class="clr"></div>

<div class="black_bar" style="margin-top:50px;">
<div>Frugles - <%= @frugles.count %></div>
</div>
<ul class="frugles tag_box" style="float:left">
	<%= render :partial => 'neighborhoods/small_frugle', :collection => @frugles, :as => :frugle %>
</ul>
<div class="clr"></div>
<div class="tag_border_bottom" style="position:relative;top:-6px;"><%= image_tag "tag_box_bottom.png" %></div>