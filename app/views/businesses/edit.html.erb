<% title "Edit Business" %>
<% javascript 'dynamic' %>

<h2 class="yellow_strip">Edit Business Info</h2>
<div style="margin: -33px 0pt 0pt; z-index: -10;"><%= image_tag "topgrass.png" %></div>

<div style="width:500px; margin: 0 auto;">
<%= form_for @business do |f| %>
  <%= f.error_messages %>
<div class="new_business_box">
	<h3>Edit Your Business Listing Info:</h3>

	<div class="reg_row">
		<div class="new_business_col_left">Business Name</div>
	  <div class="fl"><%= f.text_field :name, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="new_business_col_left">Address</div>
	  <div class="fl"><%= f.text_field :address, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="new_business_col_left">Address 2</div>
	  <div class="fl"><%= f.text_field :address2, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="new_business_col_left">Zip Code</div>
	  <div class="fl"><%= f.text_field :zip, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="new_business_col_left">Website URL</div>
	  <div class="fl"><%= f.text_field :website, :class => "reg_bar" %></div>
	  	<div class="clr"></div>
	</div>
	<div class="reg_row">
		<div class="new_business_col_left">Business Info</div>
	  <div class="fl"><%= f.text_area :info, :class => "reg_bar", :style => "height: 80px;width:205px;" %></div>
	  	<div class="clr"></div>
	</div>
</div>
<p><%= f.submit "Edit Business Info", :class => "button", :style => "margin-left:160px;" %></p>
</div>
<% end %>
</div>

<div class="skyline_bottom"><%= image_tag "skyline_bottom.png" %></div>