<% title "Edit Business" %>
<% javascript 'dynamic' %>

<%= form_for @business do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :business_name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :address_2 %><br />
    <%= f.text_field :address2 %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :info %><br />
    <%= f.text_area :info %>
  </p>
<script type="text/javascript">
$('business_category_id').observe("change",function(){
	categorySelected();
});
</script>
  <p>
    <%= f.label :category %><br />
	<%= f.collection_select :category_id, Category.find(:all), :id, :title, :prompt => "Select a Category" %>
  </p>
  <p id="subcategory_field">
    <%= f.label :subcategory %><br />
	<%= f.collection_select :subcategory_id, Subcategory.find(:all, :conditions => ["category_id = ?", @business.category_id]), :id, :title, :prompt => "Select a Subcategory" %>
  </p>

  <p><%= f.submit %></p>
<% end %>

