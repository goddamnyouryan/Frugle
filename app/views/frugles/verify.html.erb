<% title "Verify a Frugle" %>

<h2 style="margin: 20px 0; text-align:center;" class="scrollable_frugles_header">Frugle Verification</h2>

<h2></h2>
  <div class="verify_box">
  	<div class="caption" style="text-align:center; font-size:14px;">Enter the code from the top right-hand corner of the printed out frugle
		and click "Verify" to ensure the frugle is real and still running</div>
  	<div class="verify_row">
    	<div class="cat_box_row1">Enter the 6 digit code on the Frugle below:</div>
			<%= form_tag '/frugles/verified', :remote => true do %>
      	<div class="form_row"><%= text_field_tag :search, params[:search], :class => "form_bar" %></div>
      	<div class="hide_button" style="margin-top:15px;"><%= submit_tag "Verify", :class => "hide_button" %></div>
			<% end %>
      
    </div>
  </div>


<h2 id="status" class="caption" style="text-align:center;margin:25px auto;"></h2>

<ul id="details" style="margin:25px auto;width:270px;list-style:none;	"></ul>

<div class="clr"></div>

<div style="margin:0 0 -4px 0;"><%= image_tag "bottomgrass.png" %></div>