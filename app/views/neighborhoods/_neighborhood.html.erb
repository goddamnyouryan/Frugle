<% if user_signed_in? %>

<%= form_for(current_user, :url => neighborhood_path(current_user), :html => { :method => :put }) do |f| %>
	<%= f.select(:neighborhood_id, options_from_collection_for_select(Neighborhood.order("name ASC"), "id", "name") ) %>
	<%= f.submit "Choose Neighborhood", :class => "orange_button" %>
<% end %>

<% else %>

<%= form_tag "/neighborhoods/update_signed_out" do %>
  <%= select_tag(:neighborhood_id, options_from_collection_for_select(Neighborhood.order("name ASC"), "id", "name") ) %>
  <%= submit_tag "Choose Neighborhood", :class => "orange_button" %>
<% end %>

<% end %>