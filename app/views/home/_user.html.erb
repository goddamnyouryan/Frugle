<% form_tag frugles_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<ul id="categories">
<% for category in @categories %>
	<li id="category_<%= category.id %>">
	<% if @user_categories.include?(category) %>
		<%= link_to "#{category.title}", categorization_path(current_user.id, :category_id => category.id), :method => :delete, :remote => true, :style => "background-color:yellow;" %>
	<% else %>
		<%= link_to "#{category.title}", new_categorization_path(current_user.id, :category_id => category.id), :remote => true %>
	<% end %>
	</li>
<% end %>
</ul>

<ul id="subcategories">
	<%= render 'subcategories', :user_categories => @user_categories %>
</ul>

<ul id="frugles">
	<%= render :partial => 'frugles' %>
</ul>