<% title "New Category" %>

<h2 class="yellow_strip" style="margin-top:-15px; margin-bottom:0;">Categories Admin</h2>

<%= render 'form' %>

<h3 class="black_bar" style="margin-top:25px;">All Categories</h3>

<div class="tag_box">
<table width="98%" border="0" cellpadding="5" cellspacing="2" class="border-table" style="margin:auto">
  <tr>
    <td align="center" class="border-table bg-dark">Category</td>
    <td align="center" class="border-table bg-dark">&nbsp;</td>
		<td align="center" class="border-table bg-dark">&nbsp;</td>
  </tr>
<% for category in @categories %>
  <tr>
    <td align="center" class="border-table"><%= category.title %></td>
    <td align="center" class="border-table"><%= link_to "Subcategories", category, :class => "link-blue" %></td>
		<td align="center" class="border-table"><%= link_to "Delete", category, :method => :delete, :confirm => "Are you sure you want to delete this category?", :class => "link-blue" %></td>
  </tr>
<% end %>
</table>